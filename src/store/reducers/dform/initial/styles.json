{
  "patient": [
    {
      "style": [
        {
          "field": "number",
          "label": "No.",
          "style": {
            "width": 200
          },
          "valueSetters": [
            {
              "label": "Set next No.",
              "optionKey": "nextPatientNumber"
            }
          ]
        },
        {
          "field": "name",
          "label": "Name",
          "class": "textinput",
          "required": true
        },
        {
          "field": "age",
          "label": "Age",
          "class": "textunitinput",
          "units": [
            "years",
            "months"
          ],
          "precision": 0
        },
        {
          "field": "district",
          "label": "District",
          "class": "textinput"
        },
        {
          "class": "block",
          "children": [
            {
              "field": "municipality_vdc.name",
              "label": "Municipality/VDC",
              "class": "textinput"
            },
            {
              "field": "municipality_vdc.no",
              "label": "Municipality/VDC No.",
              "class": "textinput",
              "type": "number"
            }
          ]
        },
        {
          "field": "area",
          "label": "Area",
          "class": "textinput"
        },
        {
          "field": "contact_number",
          "label": "Contact Number",
          "class": "textinput"
        },
        {
          "field": "blood_type",
          "label": "Blood Type",
          "class": "select",
          "options": [
            { "id": "A", "label": "A" },
            { "id": "B", "label": "B" },
            { "id": "O", "label": "O" },
            { "id": "AB", "label": "AB" }
          ]
        },
        {
          "class": "block",
          "children": [
            {
              "field": "husband.name",
              "label": "Husband's Name",
              "class": "textinput"
            },
            {
              "field": "husband.contact_number",
              "label": "Husband's Contact Number",
              "class": "textinput"
            }
          ]
        }
      ]
    }
  ],
  "record": [
    {
      "id": "anc",
      "label": "ANC",
      "style": [
        {
          "field": "prev_pregnancy",
          "label": "Previous history of Pregnancy",
          "class": "subformlist",
          "ditto": true,
          "fields": [
            {
              "field": "living",
              "label": "Living",
              "class": "check"
            },
            {
              "field": "born_dead",
              "label": "Born Dead",
              "class": "check",
              "show": "!living"
            },
            {
              "field": "born_within_36_weeks",
              "label": "Born less than 36 weeks",
              "class": "check"
            },
            {
              "field": "twins",
              "label": "Twins",
              "class": "check"
            },
            {
              "field": "abortion",
              "label": "Abortion",
              "class": "check"
            },
            {
              "field": "gender",
              "label": "Gender",
              "class": "radio",
              "options": [
                {
                  "id": 1,
                  "label": "Male"
                },
                {
                  "id": 2,
                  "label": "Female"
                }
              ]
            },
            {
              "field": "age",
              "label": "Current Age",
              "class": "textunitinput",
              "units": [
                "years",
                "months"
              ],
              "precision": 0
            },
            {
              "field": "pregnancy_complication",
              "label": "Pregnancy Complication",
              "class": "check"
            },
            {
              "field": "pregnancy_complication_detail",
              "class": "textarea",
              "show": "pregnancy_complication"
            },
            {
              "field": "",
              "label": "Mode of Delivery",
              "class": "radio",
              "options": [
                {
                  "id": "normal",
                  "label": "Normal"
                },
                {
                  "id": "cs",
                  "label": "CS"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
